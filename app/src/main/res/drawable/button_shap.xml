<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#FF6633" />
            <stroke android:width="1dp" android:color="#FF6633" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:angle="270" android:endColor="@color/worldPay_green" android:startColor="#007867" />
            <stroke android:width="0dp" android:color="@color/worldPay_green" />
            <corners android:radius="20dp" />
        </shape>
    </item>
</selector>